<div class="banner-show">
  <% if @cocktail.photo.present? %>
    <%= cl_image_tag @cocktail.photo, class: "sh-photo" %>
  <% else %>
    <div class="sh-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/500x400/?cocktail');">
  <% end %>




  <div class="title"><%= @cocktail.name.upcase %></div>
  <%= link_to "🔙", cocktails_path, class: "home-btn" %>
</div>

<div class="ingredient-box">
  <p class="subtitle">Ingredients</p>
  <% @cocktail.doses.each do |dose| %>
    <div>
      <%= dose.ingredient.name %>  -  <%= dose.description %>
      <%= link_to "✖️", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
  <% end %>
  <div class="mt-5">
   <%= render 'doses/form' %>
  </div>
  <div class="remove">
    <%= link_to "remove cocktail", cocktail_path(@cocktail), class: "remove", method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
</div>


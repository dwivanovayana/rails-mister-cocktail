<div class="banner">
  <h1>
    <span id="banner-typed-text"></span>
  </h1>
  <%= link_to "Add Cocktail", new_cocktail_path, class:"button" %>
</div>

<div class="container mt-5">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
         <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo %>');">
            <div class="card-description">
              <h2><%= cocktail.name.capitalize %></h2>
              <%#= link_to " ðŸ—‘", cocktails_path, method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
            <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
         </div>
      </div>
    <% end %>
  </div>
</div>
